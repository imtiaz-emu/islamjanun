<div class="row">
  <% @users.each do |user| %>
      <div class="col-lg-3">
        <div class="contact-box center-version">

          <a href="<%= profile_path(user.profile) %>">

            <%= image_tag user.profile.photo.present? ? user.profile.photo_url(:thumb) : 'http://placehold.it/50x50', class: 'img-circle' %>

            <h3 class="m-b-xs"><strong><%= user.profile.name %></strong></h3>

            <div class="font-bold"><%= user.profile.title if user.profile.title.present? %></div>
            <address class="m-t-md">
              <strong><%= user.profile.points %></strong><br>
              <% if user.profile.mobile.present? %><abbr title="Phone">P:</abbr> <%= user.profile.mobile %> <% end %>
            </address>

          </a>

          <% if user.profile.fb_link %>
              <div class="contact-box-footer">
                <div class="m-t-xs btn-group">
                  <a href="https://facebook.com/<%= user.profile.fb_link %>" class="btn btn-xs btn-white" target="_blank"><i class="fa fa-facebook"></i></a>
                </div>
              </div>
          <% end %>

        </div>
      </div>
  <% end %>
</div>