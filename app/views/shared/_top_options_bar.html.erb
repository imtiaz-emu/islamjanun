<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-md-4">
    <h2>IslamJanun</h2>
  </div>
  <div class="col-md-8 text-right">
    <h2 class="count-info">
      <%= link_to 'Ask Question', new_question_path, class: "btn btn-primary btn-md", 'data-no-turbolink' => true %>
      <%= link_to 'Questions', questions_path, class: "btn btn-primary btn-md"%>
      <%= link_to 'Users', users_path, class: "btn btn-primary btn-md" %>
      <%= link_to 'Tags', pages_tags_path, class: "btn btn-primary btn-md" %>
      <%= link_to 'Rules', pages_rules_path, class: "btn btn-primary btn-md" %>
      <% if current_user.present? && current_user.is_admin? %>
        <%= link_to 'Admin Panel', admin_dashboard_path, class: "btn btn-primary btn-md" %>
      <% end %>
      <% if current_user.present? && current_user.is_moderator? %>
          <span class="label label-warning"><%= pending_questions.count %></span>
          <%= link_to 'PendingQs', pending_questions_questions_path, class: "btn btn-primary btn-md" %>
      <% end %>
    </h2>
  </div>
</div>