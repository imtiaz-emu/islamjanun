<div class="vote-actions">
  <a href="<%= upvote_path(a_id: answer.id) %>" data-remote="true">
    <i class="fa fa-chevron-up fa-3x <%= upvoted(answer) ? 'voted' : 'not-voted' %>"> </i>
  </a>

  <span>
    <div class="ans-upvote-count">+<%= answer.upvotes.count %></div>
    <div class="vote-count-separator"></div>
    <div class="ans-downvote-count">-<%= answer.downvotes.count %></div>
  </span>

  <a href="<%= downvote_path(a_id: answer.id) %>" data-remote="true">
    <i class="fa fa-chevron-down fa-3x <%= downvoted(answer) ? 'voted' : 'not-voted' %>"> </i>
  </a>

  <% if current_user == answer.question.user %>
      <a href="<%= accepted_path(a_id: answer.id) %>" data-remote="true">
        <i class="fa fa-check fa-3x <%= answer.accepted ? 'accepted' : 'not-voted' %>"> </i>
      </a>
  <% else %>
      <a href="javascript:void(0)">
        <i class="fa fa-check fa-3x <%= answer.accepted ? 'accepted' : 'hidden' %>"> </i>
      </a>
  <% end %>
</div>