<div class="vote-actions">
  <a href="<%= upvote_path(q_id: question.id) %>" data-remote="true">
    <i class="fa fa-chevron-up fa-4x <%= upvoted(question) ? 'voted' : 'not-voted' %>"> </i>
  </a>

  <span>
    <div class="ques-upvote-count">+<%= question.upvotes.count %></div>
    <div class="vote-count-separator"></div>
    <div class="ques-downvote-count">-<%= question.downvotes.count %></div>
  </span>

  <a href="<%= downvote_path(q_id: question.id) %>" data-remote="true">
    <i class="fa fa-chevron-down fa-4x <%= downvoted(question) ? 'voted' : 'not-voted' %>"> </i>
  </a>
</div>