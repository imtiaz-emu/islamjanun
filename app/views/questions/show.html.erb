<div class="row" id="qid_<%= @question.id %>">
  <div class="col-md-1 qvote-operations">
    <%= render :partial => 'shared/qvotes', locals: {question: @question} %>
  </div>
  <div class="col-md-8">
    <div class="ibox">
      <div class="ibox-content">
        <a class="btn-link" href="javascript:void(0)">
          <h2>
            <%= @question.title %>
          </h2>
        </a>

        <%= @question.description.html_safe %>

        <div class="row">
          <div class="col-md-8">
            <h5>Tags:</h5>
            <% @question.tag_list.each do |tag| %>
                <%= link_to tag, questions_path(t: tag), class: 'btn btn-primary btn-xs' %>
            <% end %>
          </div>
          <div class="col-md-4">
            <div class="small">
              <div class="social-avatar">
                <a class="pull-left" href="<%= profile_path(@question.user.profile) %>">
                  <%= image_tag @question.user.profile.photo.present? ? @question.user.profile.photo_url(:thumb) : 'http://placehold.it/50x50' %>
                </a>

                <div class="media-body">
                  <a href="<%= profile_path(@question.user.profile) %>">
                    <%= @question.user.profile.name %>
                  </a>
                  <small class="text-muted">97 Points</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="vote-info q-user-interactions">
      <% if current_user == @question.user %>
          <i class="fa fa-pencil-square"></i> <%= link_to 'Edit', edit_question_path(@question), 'data-no-turbolink' => true %>
          <i class="fa fa-trash"></i> <%= link_to 'Destroy', question_path(@question), method: :delete %>
      <% end %>
    </div>

    <div id="question-all-answers">
      <%= render :partial => 'questions/answers', locals: {answers: @question.answers.includes(:user => :profile)} %>
    </div>
  </div>


  <div class="col-md-3">
    <div class="wrapper wrapper-content project-manager">
      <h4>Project description</h4>
      <img class="img-responsive" src="img/zender_logo.png">

      <p class="small">
        There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in
        some form, by injected humour, or randomised words which don't look
        even slightly believable. If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't
        anything embarrassing
      </p>

      <p class="small font-bold">
        <span><i class="fa fa-circle text-warning"></i> High priority</span>
      </p>
      <h5>Project tag</h5>
      <ul style="padding: 0" class="tag-list">
        <li><a href="project_detail.html"><i class="fa fa-tag"></i> Zender</a></li>
        <li><a href="project_detail.html"><i class="fa fa-tag"></i> Lorem ipsum</a></li>
        <li><a href="project_detail.html"><i class="fa fa-tag"></i> Passages</a></li>
        <li><a href="project_detail.html"><i class="fa fa-tag"></i> Variations</a></li>
      </ul>
      <h5>Project files</h5>
      <ul class="list-unstyled project-files">
        <li><a href="project_detail.html"><i class="fa fa-file"></i> Project_document.docx</a></li>
        <li><a href="project_detail.html"><i class="fa fa-file-picture-o"></i> Logo_zender_company.jpg</a></li>
        <li><a href="project_detail.html"><i class="fa fa-stack-exchange"></i> Email_from_Alex.mln</a></li>
        <li><a href="project_detail.html"><i class="fa fa-file"></i> Contract_20_11_2014.docx</a></li>
      </ul>
      <div class="text-center m-t-md">
        <a class="btn btn-xs btn-primary" href="project_detail.html#">Add files</a>
        <a class="btn btn-xs btn-primary" href="project_detail.html#">Report contact</a>

      </div>
    </div>
  </div>
</div>