<% if @error.present? %>
    alert('<%== escape_javascript @error %>');
<% else %>
    <% if @upvotable.is_a?(Question) %>
        $(".qvote-operations").html('<%=j render :partial => 'shared/qvotes', locals: {question: @upvotable} %>');
    <% else %>
        var answer_id = <%= @upvotable.id %>;
        $("#answer_" + answer_id.toString() + " .avote-operations").html('<%=j render :partial => 'shared/avotes', locals: {answer: @upvotable} %>')
    <% end %>
<% end %>